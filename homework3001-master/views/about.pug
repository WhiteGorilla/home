doctype html
html
div
    head
      meta(charset='utf-8')
      title='document'
      link('rel=stylesheet' href='style.css')
      link('rel=stylesheet' href='style.css')
      link('rel=stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')

    body
      div.inner-wrap
          div.header
              ul.nav.justify-content-center
                li.nav-item
                  a.nav-link(href='/') Home
                li.nav-item
                  a.nav-link(href='/about') About us
                li.nav-item
                  a.nav-link(href='/contact') Contact


          div.about
            img.founder-main(src='/pics/founder.jpeg' alt='founder')


            div.form-group
             h5 You can extend our team right now
             form.for-team(method='POST' action='/vacancy')
              label(for='posit') Your position
              input.become-a-team.form-control(type='text' name='position' id='posit')
              br
              label(for='name') Your name
              input.become-a-team.form-control(type='text' name='name')
              br
              button.button-team.btn.btn-primary(type='submit') Submit

            div.team-list.list-group.rounded
              each value in team
                a.list-group-item.list-group-item-action(href='/about/' + value.position) Our #{value.position} is #{value.name}

            div.about_content
              h3 Based in #{ country }
              h3 Founded on #{ foundationDate }
              h3 Founder #{ founder }
